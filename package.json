		"style-loader": "^1.0.0",
		"stylelint": "^11.1.1",
		"stylelint-config-recommended": "^3.0.0",
		"url-loader": "^2.1.0",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.8",
		"webpack-dev-server": "^3.8.0"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.4",
		"express": "^4.17.1",
		"handlebars": "^4.3.1",
		"morgan": "^1.9.1",
		"uuid": "^3.3.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js}": [
			"npm run prettier",
			"npm run --silent lint:fix",
			"git add"
		],
		"src/**/*.scss": [
			"npm run --silent stylelint:fix",
			"git add"
		]
	}
}
