		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-loader": "^3.0.0",
		"eslint-plugin-import": "^2.18.2",
		"file-loader": "^4.2.0",
		"handlebars-loader": "^1.7.1",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
