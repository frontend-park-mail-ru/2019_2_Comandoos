<div id="{{data.id}}">
	<label for="{{data.id}}-input" class="label">{{props.label}}</label>
	<select id="{{data.id}}-input" name="{{props.name}}" class="select {{props.className}}" {{props.attributes}}>
		<option disabled value="" selected>Выберите</option>
		{{#each props.items}}
			<option value="{{value}}"
					{{#selected}} selected="selected" {{/selected}}
					{{#disabled}} disabled {{/disabled}}
			>{{label}}</option>
		{{/each}}
	</select>
</div>
