<div id="{{_id}}" class="job-item">
	<a class="job-item__title" href="/jobs/{{id}}">{{title}}</a>
	{{#manage}}
		<div class="manage-buttons">
			<a href="/jobs/{{id}}/edit">Редактировать</a>
			{{#published}}
				<button class="close-job-action manage-btn" data-id="{{id}}">Закрыть</button>
			{{else}}
				<button class="publish-job-action manage-btn" data-id="{{id}}">Опубликовать</button>
			{{/published}}
			<button class="delete-job-action manage-btn" data-id="{{id}}">Удалить</button>
		</div>
	{{else}}
		<div class="job-item__small__info job-item__small">{{type}} <span class="job-item__budget">{{paymentAmount}}</span>
			- {{experienceLevel}} - {{created}}</div>
		<div class="job-item__description">
			{{description}}
		</div>
		<div class="job-item__tags">
			{{#each skills}}
				<span class="tag tag_secondary">{{this}}</span>
			{{/each}}
		</div>
		<div class="job-item__small">Откликов: {{proposals}}
			<span class="job-item__country">
				<i class="fas fa-map-marker-alt"></i>
				<span>{{country}}</span>
			</span>
		</div>
	{{/manage}}
</div>
